#define ss A0
#define sl A1
#define sp A2

void setup()
{
  pinMode(ss, INPUT);
  pinMode(sl, INPUT);
  pinMode(sp, INPUT);
  
  Serial.begin(9600);
}

void loop()
{
  int srodkowy=analogRead(ss);
  int lewy=analogRead(sl);
  int prawy=analogRead(sp);


if(srodkowy>=500 && lewy<500 && prawy<500)
  //jedz prosto
else if(lewy>=500 && srodkowy<500 && prawy<500)
  //skrec w prawo
else if(prawy>=500 && srodkowy<500 && lewy<500)
  //skrec w lewo
}
