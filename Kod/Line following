#define ss A0
#define sl A1
#define sp A2

#define prog

void setup()
{
  pinMode(ss, INPUT);
  pinMode(sl, INPUT);
  pinMode(sp, INPUT);
  
  Serial.begin(9600);
}

void loop()
{
  int srodkowy=analogRead(ss);
  int lewy=analogRead(sl);
  int prawy=analogRead(sp);


if(srodkowy>=prog && lewy<prog && prawy<prog)
  //jedz prosto
else if(lewy>=prog && srodkowy<prog && prawy<prog)
  //skrec w lewo
else if(prawy>=prog && srodkowy<prog && lewy<prog)
  //skrec w prawo
}
